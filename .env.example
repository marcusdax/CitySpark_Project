# üåç Environment Variables for CitySpark Complete Platform
# Copy this file to .env and update with your actual values

# Application Settings
APP_NAME="CitySpark Complete Platform"
APP_VERSION="2.0.0"
DEBUG=True
SECRET_KEY="your-super-secret-key-change-this-in-production"

# Server Configuration
HOST=127.0.0.1
PORT=8000
ALLOWED_HOSTS=["127.0.0.1", "localhost"]

# Database
DATABASE_URL="sqlite:///./cityspark.db"
# For PostgreSQL: DATABASE_URL="postgresql://user:password@localhost/cityspark"
# For MySQL: DATABASE_URL="mysql://user:password@localhost/cityspark"

# Redis Cache
REDIS_URL="redis://localhost:6379"
REDIS_CACHE_TTL=3600

# AI/ML Configuration
AI_MODEL_PATH="./ai_models"
SENTIMENT_MODEL="cardiffnlp/twitter-roberta-base-sentiment-latest"
TOPIC_MODEL="facebook/bart-large-mnli"

# GitHub Integration
GITHUB_API_TOKEN=your-github-token-here
GITHUB_API_URL=https://api.github.com
GITHUB_RATE_LIMIT=5000

# Omniscient Core AI Hub (Optional)
AI_HUB_API_URL=https://ai-hub.example.com/api
AI_HUB_API_KEY=your-ai-hub-key-here
AI_HUB_TIMEOUT=30

# File Storage
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
ALLOWED_EXTENSIONS=".jpg,.jpeg,.png,.gif,.pdf,.docx"

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Security
JWT_SECRET_KEY=jwt-secret-key-change-this
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# Logging
LOG_LEVEL=INFO
LOG_FILE=./cityspark.log

# Feature Flags
ENABLE_AI_FEATURES=True
ENABLE_ART_GENERATION=True
ENABLE_GITHUB_SCRAPING=True
ENABLE_OMNISCIENT_HUB=False

# Performance
CACHE_ENABLED=True
RATE_LIMIT_ENABLED=True
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=3600

# Development
DEVELOPMENT_MODE=True
AUTO_RELOAD=True
SHOW_SQL_QUERIES=False